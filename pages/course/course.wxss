/* pages/course/course.wxss */

page {
  font-size: 32rpx;
}

/*搜索框的样式*/
.wrap-top {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10rpx 20rpx;
}

.search-icon {
  height: 45rpx;
  width: 45rpx;
  margin-right: 10rpx;
}

.search-box {
  display: flex;
  flex-direction: row;
  flex: 1;
  align-items: center;
  background: #f2f2f2;
  height: 45rpx;
  padding: 15rpx;
  width: 80%;
  border-radius: 10rpx;
}

.search-input {
  flex: 1;
}

.cancel {
  padding-left: 10rpx;
}

.search-back-pic {
  width: 35rpx;
  height: 35rpx;
  padding-right: 10rpx;
  vertical-align: middle;
}
.hidden{
  display: none;
}

/*类别选项栏样式*/

.swiper-tab {
  width: 100%;
  /* border-bottom: 2rpx solid #ccc; */
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
   /* justify-content: space-around;  */
}

.swiper-tab-item {
  width: 160rpx;
  color: #434343;
  margin-left: 20rpx;
   /* background: #434343;  */
}

.active {
  color: #f65959;
  border-bottom: 4rpx solid #f65959;
}

swiper {
  padding: 15rpx;
}

/*课程列表样式  */

.course-list{
 display: inline-block;
 height: auto;
 width: 50%;
}


.list-item {
  width: 95%;
  margin: 15rpx 8rpx;
  float: left;
  box-sizing: border-box;
  /* border: 1px solid #434343; */
  box-shadow: 1px 1px 1px #ffd9d8;
  border-radius: 15rpx;
}

.course-img {
  width: 100%;
}

.course-name {
  padding: 10rpx;
}


.tip-text {
  display: flex;
  flex-direction: row;
  align-items: center;
  align-self: center;
  justify-content: center;
  font-size: 32rpx;
}
.notfind1 image {
  width: 200rpx;
  height: 200rpx;
}

.notfind1 .text1 {
  color: #ddd;
  font-size: 32rpx;
  margin-top: 20rpx;
}

/*设置盒子居中*/

.notfind1 {
  /* background-color: red; */
  position: absolute;
  top: 30%;
  left: 36%;
  /* height: 100%; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: -111;
}

.tips1 {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
   /* background-color: red */
}

.hidden{
  display: none;
}